<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title }}{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
    </head>
    <body>

        {{ include('inc/_navbar.html.twig') }}

        <div class="container-fluid mt-2 border">
            <div class="row justify-content-center">
                {% block title_body %}{% endblock %}
            </div>
        </div>

        <div class="container-fluid mt-2 justify-content-center">
            <div class="row">
                <div class="col-md-23 border">
                    {% block body %}
                        <div class="mb-3">
                            <h4 class="text-center mb-3">
                                Recently added items
                            </h4>
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Collection</th>
                                    <th scope="col">Category</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td>{{ item.name }}</td>
                                        <td>{{ item.userCollection.name }}</td>
                                        <td>{{ item.userCollection.category.name }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="#">show all...</a>
                        </div><hr>
                        <div class="mb-3">
                            <h4 class="text-center mb-3">
                                The biggest collections
                            </h4>
                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                {% for collection in collections %}
                                    <div class="col">
                                        <div class="card h-100">
                                            <img src="..." class="card-img-top" alt="...">
                                            <div class="card-body">
                                                <h6 class="card-title">
                                                    <a href="{{ path('user_collection_show', {'id': collection.id}) }}">{{ collection.name | upper }}</a>
                                                </h6>
                                                <p class="card-text">Category: {{ collection.category }}</p>
                                                <p class="card-text">{{ collection.description }}</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <a href="#">show all...</a>
                        </div><hr>
                        <div class="mb-3">
                            <h4 class="text-center mb-3">
                                Tag Cloud
                            </h4>
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>

    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="{{ asset('app.js') }}"></script>
    {% block script %}{% endblock %}

</html>
