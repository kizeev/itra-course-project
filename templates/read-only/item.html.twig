{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block title_body %}
    <h3 class="font-weight-normal text-center">{{ title }}</h3>
{% endblock %}

{% block body %}
    <table class="table table-striped table-hover" id="item-table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Collection</th>
            <th scope="col">Category</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><a href="{{ path('item_show', {'id': item.id}) }}">{{ item.name }}</td>
                <td>{{ item.userCollection.name }}</td>
                <td>{{ item.userCollection.category.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block script %}
    <script>
        $(document).ready(function () {
            $('#item-table').DataTable();
        });
    </script>
{% endblock %}