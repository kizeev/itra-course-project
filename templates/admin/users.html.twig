{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block title_body %}
    <h3 class="font-weight-normal text-center">{{ title }}</h3>
{% endblock %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Lock status</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles[0] | json_encode }}</td>
                <td>
                    {% if user.blocked == true %}
                        Blocked
                    {% else %}
                        Unblocked
                    {% endif %}
                </td>
                <td><a href="{{ path('admin_user_show',  {'id': user.id}) }}">Show</a></td>
                <td><a href="{{ path('admin_user_edit',  {'id': user.id}) }}">Edit</a></td>
                <td><a href="{{ path('admin_user_remove',  {'id': user.id}) }}">Remove</a></td>
                <td><a href="{{ path('admin_user_switch',  {'id': user.id}) }}">Switch</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
