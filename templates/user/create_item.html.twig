{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}



{% block title_body %}
    {{ form_start(form) }}
        <h1 class="h3 mb-3 font-weight-normal text-center">{{ title }}</h1>
        {{ form_row(form.name) }}

        <ul>
            {% for row in form.item_values %}
                <li>
                    {{ row.vars.value.attribute.fieldname }}
                    {{ form_widget(row) }}
                </li>
            {% endfor %}
        </ul>
        <hr>
        <ul class="tags" data-index="{{ form.tags|length > 0 ? form.tags|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}">
            <button type="button" class="add_tag_link btn-success" data-collection-holder-class="tags">Add a tag</button>
            {% for row in form.tags %}
                <li class="attr_li" autocomplete="on">
                    {{ form_row(row.name) }}
                </li>
            {% endfor %}
        </ul>

    {{ form_row(form.save) }}
    {{ form_end(form) }}

{% endblock %}
{% block sidebar %}{% endblock %}
{% block body %}{% endblock %}
{% block script %}
    <script>
        document
            .querySelectorAll('.add_tag_link')
            .forEach(btn => btn.addEventListener("click", addFormToCollection));
    </script>
{% endblock %}
