{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block title_body %}
    <h4 class="font-weight-normal text-center">{{ title }}
        <a href="{{ path('user_item_create', {'id': collection.id}) }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z"/>
                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z"/>
            </svg>
        </a>
    </h4>
{% endblock %}

{% block body %}
    <table class="table table-striped table-hover" id="user-item-table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            {%  for attribute in  attributes %}
                <th scope="col">{{ attribute.fieldname | capitalize }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <th scope="row"><a href="{{ path('user_item_show', {'id': item.id}) }}">{{ item.name }}</a></th>
                    {% for value in item.itemValues %}
                        <td>{{ value.value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block script %}
    <script>
        $(document).ready( function () {
            $('#user-item-table').DataTable();
        } );
    </script>
{% endblock %}